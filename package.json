{
  "name": "github-label-manager-plus",
  "version": "0.1.0",
  "description": "A web app that help you manage GitHub labels and milestones",
  "author": "Badwater Bay",
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BadwaterBay/github-label-manager-plus.git"
  },
  "homepage": "https://github.com/BadwaterBay/github-label-manager-plus",
  "bugs": {
    "url": "https://github.com/BadwaterBay/github-label-manager-plus/issues"
  },
  "scripts": {
    "clean": "rimraf build",
    "format": "prettier './src/**/*.{js,html,scss}' --write",
    "lint": "eslint './src/**/*.{js,html}' --fix",
    "build": "yarn clean",
    "test": "echo 'No test specified yet' && exit 0",
    "dev-server": "browser-sync start -c 'bs-config.js'",
    "sass": "sass --watch ./src/scss/app.scss:./src/css/app.min.css --style compressed",
    "dev": "concurrently 'yarn dev-server' 'yarn sass'",
    "start": "dev"
  },
  "engines": {
    "node": ">=0.10 <=0.12"
  },
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "concurrently": "^5.2.0",
    "css-loader": "^3.6.0",
    "eslint": "^7.4.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-html": "^6.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jquery": "1.5.1",
    "eslint-plugin-prettier": "^3.1.4",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "sass": "^1.26.10",
    "style-loader": "^1.2.1",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*.{js,html,scss}": [
      "prettier --write"
    ],
    "./src/**/*.{js,html}": [
      "eslint --cache --fix"
    ]
  },
  "dependencies": {
    "bootstrap-material-design": "4.1.3",
    "jquery": "^3.5.1",
    "popper": "^1.0.1"
  }
}
