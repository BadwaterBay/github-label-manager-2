{
  "name": "github-label-manager-plus",
  "version": "0.1.0",
  "description": "Web app that helps you manage and migrate GitHub labels and milestones",
  "author": "Badwater Bay",
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BadwaterBay/github-label-manager-plus.git"
  },
  "homepage": "https://github.com/BadwaterBay/github-label-manager-plus",
  "bugs": {
    "url": "https://github.com/BadwaterBay/github-label-manager-plus/issues"
  },
  "scripts": {
    "clean": "rimraf build",
    "format": "prettier './**/*.{js,html,md,json,css,scss}' --write",
    "lint": "eslint './**/*.{js,html}' --fix",
    "build:dev": "webpack-dev-server --mode=development",
    "build": "yarn clean && webpack --mode=production",
    "test": "jest",
    "start": "run-s clean build:dev",
    "serve": "serve build",
    "refresh": "rm -rf node_modules && yarn --frozen-lockfile"
  },
  "engines": {
    "node": ">=0.12 <0.13"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./**/*.{js,ts,html,md,json,css,scss}": [
      "prettier --write"
    ],
    "./**/*.{js}": [
      "eslint --cache --fix"
    ]
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.30",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "bootstrap-material-design": "^4.1.3",
    "jquery": "^3.5.1",
    "popper.js": "^1.16.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-0",
    "@babel/preset-env": "^7.11.0",
    "babel-jest": "^26.2.2",
    "css-loader": "^4.2.0",
    "eslint": "^7.5.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-html": "^6.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jquery": "1.5.1",
    "eslint-plugin-prettier": "^3.1.4",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.2.2",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "sass": "^1.26.10",
    "sass-loader": "^9.0.2",
    "serve": "^11.3.2",
    "style-loader": "^1.2.1",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
