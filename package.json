{
  "name": "github-label-manager-plus",
  "version": "1.0.0",
  "description": "A web app that help you manage GitHub labels and milestones",
  "private": true,
  "scripts": {
    "clean": "rimraf build",
    "format": "prettier './src/**/*.{js,html}' --write",
    "lint": "eslint './src/**/*.{js,html}' --fix-dry-run",
    "lint-fix": "eslint './src/**/*.{js,html}' --fix",
    "build": "npm-run-all clean && webpack",
    "test": "echo 'No test specified yet' && exit 0",
    "dev": "browser-sync start -c 'bs-config.js'",
    "start": "browser-sync start --server 'build'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BadwaterBay/github-label-manager-plus.git"
  },
  "author": "Badwater Bay",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/BadwaterBay/github-label-manager-plus/issues"
  },
  "homepage": "https://github.com/BadwaterBay/github-label-manager-plus#readme",
  "engines": {
    "node": ">=0.10 <0.14"
  },
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "eslint": "^6.8.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-css-modules": "2.11.0",
    "eslint-plugin-html": "6.0.2",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jquery": "1.5.1",
    "eslint-plugin-json": "^2.1.1",
    "eslint-plugin-markdown": "^1.0.2",
    "eslint-plugin-prettier": "^3.1.4",
    "html-webpack-plugin": "^4.3.0",
    "husky": "4.2.5",
    "lint-staged": "10.2.10",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "prettier": "2.0.5",
    "rimraf": "^3.0.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*.{js,html}": [
      "npx prettier --write",
      "eslint --fix-dry-run"
    ]
  }
}
