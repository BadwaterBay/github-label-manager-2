{
  "name": "github-label-manager-plus",
  "version": "1.0.0",
  "description": "A web app that help you manage GitHub labels and milestones",
  "private": true,
  "scripts": {
    "lint": "eslint ./src/**/*.{js,html} --fix-dry-run",
    "lint-fix": "eslint ./src/**/*.{js,html} --fix",
    "format": "npx prettier ./src/**/*.{js,html} --write",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "webpack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BadwaterBay/github-label-manager-plus.git"
  },
  "author": "BadwaterBay",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/BadwaterBay/github-label-manager-plus/issues"
  },
  "homepage": "https://github.com/BadwaterBay/github-label-manager-plus#readme",
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-css-modules": "2.11.0",
    "eslint-plugin-html": "6.0.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jquery": "1.5.1",
    "eslint-plugin-json": "^2.1.1",
    "eslint-plugin-markdown": "^1.0.2",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "4.2.5",
    "lint-staged": "10.2.8",
    "node-sass": "^4.14.1",
    "prettier": "2.0.5",
    "pretty-quick": "^2.0.1",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*.{js,html}": [
      "npx prettier ./src/**/*.{js,html} --write",
      "eslint ./src/**/*.{js,html} --fix-dry-run"
    ]
  }
}
